<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="25dp" />
                    <solid android:color="#00FFFFFF" />
                </shape>
            </item>
            <item android:bottom="0dp" android:right="0dp">
                <shape>
                    <gradient
                        android:endColor="#00FFFFFF" android:startColor="#00FFFFFF" />
                    <stroke android:width="0dp" android:color="#00FFFFFF" />

                    <corners android:radius="25dp" />
                    <padding
                        android:top="0dp"
                        android:right="10dp"
                        android:left="10dp"
                        android:bottom="0dp">
                    </padding>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>