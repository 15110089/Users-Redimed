                        android:text=""
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="6dp"
                        android:padding="4dp"
                        android:text="Do you have any skin lesion"
                        android:textColor="@color/white"
                        android:textSize="35px"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbQuestion9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:buttonTint="@color/white"
                        android:checked="false"
                        android:text=""
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtQuestion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@android:color/white"
                        android:drawablePadding="10dp"
                        android:hint="If YES, where"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHighlight="#7C7878"
                        android:textColorHint="#ADA6A6"
                        android:textColorLink="@color/white"
                        android:textSize="35px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="6dp"
                        android:padding="4dp"
                        android:text="Has you changed"
                        android:textColor="@color/white"
                        android:textSize="35px"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbQuestion10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:buttonTint="@color/white"
                        android:checked="false"
                        android:text=""
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtQuestion3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@android:color/white"
                        android:drawablePadding="10dp"
                        android:hint="If YES, please describe"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHighlight="#7C7878"
                        android:textColorHint="#ADA6A6"
                        android:textColorLink="@color/white"
                        android:textSize="35px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="6dp"
                        android:padding="4dp"
                        android:text="A family history of skin cancer"
                        android:textColor="@color/white"
                        android:textSize="35px"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbQuestion11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:buttonTint="@color/white"
                        android:checked="false"
                        android:text=""
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtQuestion4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:backgroundTint="@android:color/white"
                        android:drawablePadding="10dp"
                        android:hint="If YES, do you know what type"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHighlight="#7C7878"
                        android:textColorHint="#ADA6A6"
                        android:textColorLink="@color/white"
                        android:textSize="35px" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btSendId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shapebutton"
                android:padding="15dp"
                android:shadowColor="@android:color/transparent"
                android:text="Send Request"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>