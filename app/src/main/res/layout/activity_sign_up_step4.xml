<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#FF8C00">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:textColor="#E4DBDB"
                android:textSize="80px"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textColor="#E4DBDB"
                android:textSize="80px"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4/5"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:textSize="50px"
                android:textColor="@color/white"
                android:drawablePadding="6dp"
                android:padding="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="steps"
                android:gravity="right"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/white"
                android:drawablePadding="6dp"
                android:padding="4dp"/>
        </LinearLayout>

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shapeemail"
        android:drawablePadding="10dp"
        android:hint="Next of Kin (Name)"
        android:padding="15dp"
        android:textColor="#3D3D37"
        android:textColorHighlight="@color/white"
        android:textColorHint="#7C7878" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:padding="15dp"
        android:background="@drawable/shapetop"
        android:drawablePadding="10dp"
        android:hint="Name of usual Doctor"
        android:textColor="#3D3D37"
        android:textColorHint="#7C7878"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:background="@drawable/shapebottom"
        android:drawablePadding="10dp"
        android:hint="Clinic Name"
        android:textColor="#3D3D37"
        android:textColorHint="#7C7878"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:padding="15dp"
        android:background="@drawable/shapetop"
        android:drawablePadding="10dp"
        android:hint="Referring Doctor"
        android:textColor="#3D3D37"
        android:textColorHint="#7C7878"
        android:textColorHighlight="@color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:background="@drawable/shapebottom"
        android:drawablePadding="10dp"
        android:hint="Clinic Name"
        android:textColor="#3D3D37"
        android:textColorHint="#7C7878"
        android:textColorHighlight="@color/white"/>

    <Button
        android:id="@+id/btSignUpt4Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/shapelogin"/>


</LinearLayout>