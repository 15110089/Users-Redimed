<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logom" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        tools:context=".MainActivity"
        android:background="@drawable/bg">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <Button
                android:id="@+id/btRequestAdviceId"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:width="120dp"
                android:height="210dp"
                android:background="@drawable/shapeoption"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="40dp"
                android:drawableTop="@drawable/request_icon"
                android:shadowColor="@android:color/transparent"
                android:text="Request Advice"
                android:textColor="#FFFFFF"
                app:layout_column="0"
                app:layout_rowSpan="2"
                app:layout_row="0"
                android:textSize="25px" />

            <Button
                android:id="@+id/btls"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:width="120dp"
                android:height="100dp"
                android:background="@drawable/shapeoption"
                android:drawableTop="@drawable/track_icon"
                android:padding="15dp"
                android:shadowColor="@android:color/transparent"
                android:text="Track My Request"
                android:textColor="#FFFFFF"
                app:layout_column="1"
                app:layout_row="0"
                android:textSize="25px" />

            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:width="120dp"
                android:height="100dp"
                android:textSize="25px"
                android:drawableTop="@drawable/aboutus_icon"
                android:background="@drawable/shapeoption"
                android:padding="15dp"
                android:shadowColor="@android:color/transparent"
                android:text="About Us"
                app:layout_column="1"
                app:layout_row="1"
                android:textColor="#FFFFFF" />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:width="260dp"
                android:height="100dp"
                android:textSize="25px"
                android:drawableTop="@drawable/profile_icon"
                android:background="@drawable/shapeoption"
                android:padding="15dp"
                android:shadowColor="@android:color/transparent"
                android:text="Profile"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_row="2"
                android:textColor="#FFFFFF" />


    </androidx.gridlayout.widget.GridLayout>
        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Â© REDIMED 2020 - version 1.0.1"
            android:textColor="@color/white" />
</LinearLayout>
</LinearLayout>