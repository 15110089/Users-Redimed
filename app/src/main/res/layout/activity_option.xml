<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/bg">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TableRow>

            <Button
                android:id="@+id/btRequestAdviceId"
                android:layout_width="94dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:width="250px"
                android:height="250px"
                android:background="@drawable/shapeoption"
                android:padding="15dp"
                android:drawableTop="@drawable/request_icon"
                android:shadowColor="@android:color/transparent"
                android:text="Request Advice"
                android:textColor="#FFFFFF"
                android:textSize="25px" />

            <Button
                android:id="@+id/btls"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:width="250px"
                android:height="250px"
                android:background="@drawable/shapeoption"
                android:drawableTop="@drawable/track_icon"
                android:padding="15dp"
                android:shadowColor="@android:color/transparent"
                android:text="Track My Request"
                android:textColor="#FFFFFF"
                android:textSize="25px" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:width="250px"
                android:height="250px"
                android:textSize="25px"
                android:drawableTop="@drawable/profile_icon"
                android:background="@drawable/shapeoption"
                android:padding="15dp"
                android:shadowColor="@android:color/transparent"
                android:text="Profile"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:width="250px"
                android:height="250px"
                android:textSize="25px"
                android:drawableTop="@drawable/aboutus_icon"
                android:background="@drawable/shapeoption"
                android:padding="15dp"
                android:shadowColor="@android:color/transparent"
                android:text="About Us"
                android:textColor="#FFFFFF" />
        </TableRow>

    </TableLayout>





</LinearLayout>